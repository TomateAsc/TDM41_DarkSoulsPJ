<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="153dp">

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Nombre"
            tools:text="@string/Nombre" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <TextView
            android:id="@+id/tvSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/Sex"
            app:layout_column="0"
            app:layout_row="1" />

        <EditText
            android:id="@+id/etSexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <TextView
            android:id="@+id/tvClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Class"
            app:layout_column="0"
            app:layout_row="2" />

        <Spinner
            android:id="@+id/spClass"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="2" />

        <EditText
            android:id="@+id/Classdesc"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_column="1"
            app:layout_row="3" />

        <TextView
            android:id="@+id/tvGift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Gift"
            app:layout_column="0"
            app:layout_row="4" />

        <Spinner
            android:id="@+id/spGift"
            android:layout_width="214dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvPhysique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Physique"
            app:layout_column="0"
            app:layout_row="5" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="214dp"
            android:layout_height="wrap_content" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>